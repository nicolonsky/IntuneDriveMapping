@model IntuneDriveMapping.Models.DriveMapping

    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" id="editDriveMapping" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle">Edit entry</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form asp-action="Edit" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                        <div class="form-group d-none">
                            <label asp-for="Id" class="control-label"></label>
                            <input asp-for="Id" class="form-control" readonly />
                        </div>
                        <div class="form-group">
                            <label asp-for="Path" class="control-label"></label>
                            <input asp-for="Path" class="form-control" />
                            <span asp-validation-for="Path" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DriveLetter" class="control-label"></label>
                            @Html.DropDownListFor(m => m.DriveLetter, DriveLetter.GetDriveLetters(), new { @class = "form-control" })
                            <span asp-validation-for="Label" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Label" class="control-label"></label>
                            <input asp-for="Label" class="form-control" />
                            <span asp-validation-for="Label" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="GroupFilter" class="control-label"></label>
                            <input asp-for="GroupFilter" class="form-control" />
                            <span asp-validation-for="GroupFilter" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-outline-primary" data-save="modal" />
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
